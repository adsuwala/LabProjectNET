@using Microsoft.AspNetCore.Identity
@using LabApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin") || User.IsInRole("Owner"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Panel admin</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Logowanie</a>
    </li>
}
</ul>
