@model IEnumerable<LabApp.Controllers.AdminUserListItem>
@{
    ViewData["Title"] = "Panel administratora";
}

<h1>@ViewData["Title"]</h1>

<ul class="nav nav-pills mb-3">
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Admin" asp-action="Index">Użytkownicy</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Products" asp-action="Index">Produkty</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="AdminOrders" asp-action="Index">Zamówienia</a>
    </li>
</ul>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Rola</th>
            <th>Id</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.DisplayRole</td>
            <td class="font-monospace">@user.Id</td>
            <td>
                @if (User.IsInRole("Owner") && !user.IsOwner)
                {
                    <div class="d-flex gap-2">
                        @if (!user.IsAdmin)
                        {
                            <form asp-action="MakeAdmin" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Nadaj Admina</button>
                                @Html.AntiForgeryToken()
                            </form>
                        }
                        else
                        {
                            <form asp-action="RemoveAdmin" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Zabierz Admina</button>
                                @Html.AntiForgeryToken()
                            </form>
                        }
                    </div>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
