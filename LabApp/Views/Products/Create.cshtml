@model LabApp.Models.Product
@{
    ViewData["Title"] = "Dodaj produkt";
}

<h1 class="mb-3">Panel administratora</h1>

<ul class="nav nav-pills mb-3">
    <li class="nav-item">
        <a class="nav-link" asp-controller="Admin" asp-action="Index">Użytkownicy</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-controller="Products" asp-action="Index">Produkty</a>
    </li>
</ul>

<h2>Dodaj produkt</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label" for="Name">Nazwa</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="Category">Kategoria (opcjonalnie)</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Cena (zł)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" inputmode="decimal" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="PromoPrice">Cena promocyjna (zł, opcjonalnie)</label>
        <input asp-for="PromoPrice" class="form-control" type="number" step="0.01" inputmode="decimal" />
        <span asp-validation-for="PromoPrice" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" for="Stock">Stan</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Published" class="form-check-input" />
        <label class="form-check-label" asp-for="Published">Opublikowany</label>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
